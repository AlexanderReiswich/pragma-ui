{
  "name": "pragma-ui",
  "version": "0.4.1",
  "description": "A PragmaCSS-based set of UI elements",
  "license": "MIT",
  "keywords": [
    "pragma",
    "ui",
    "css",
    "forms"
  ],
  "main": "./dist/pragma-ui.umd.js",
  "files": [
    "dist",
    "src/components"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "production-build": "vue-cli-service build",
    "npm-bundle": "vue-cli-service build --target lib ./src/components/index.js --mode production",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "animejs": "^3.1.0",
    "current-script-polyfill": "^1.0.0",
    "dayjs": "^1.8.17",
    "lodash.clonedeep": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.isequal": "^4.5.0",
    "lodash.set": "^4.3.2",
    "popper.js": "^1.16.0",
    "pragma-css": "^0.7.8",
    "vue": "^2.6.11",
    "vue-click-outside": "^1.0.7"
  },
  "peerDependencies": {
    "animejs": "^3.1.0",
    "dayjs": "^1.8.17"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^3.12.1",
    "@vue/cli-service": "^5.0.8",
    "@vue/eslint-config-prettier": "^5.0.0",
    "autoprefixer": "^9.6.1",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.2.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.2.3",
    "faker": "^4.1.0",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "vue-property-decorator": "^8.2.2",
    "vue-router": "^3.1.2",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": "off",
      "quotes": [
        "error",
        "single"
      ],
      "indent": [
        "error",
        2
      ],
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "legacyDecorators": true
      }
    },
    "plugins": [
      "vue"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
