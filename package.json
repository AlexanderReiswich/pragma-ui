{
  "name": "pragma-ui",
  "version": "0.1.3",
  "description": "A PragmaCSS-based set of UI elements",
  "license": "MIT",
  "keywords": [
    "pragma",
    "ui",
    "css",
    "forms"
  ],
  "main": "./dist/pragma-ui.common.js",
  "files": [
    "dist/*",
    "src/*",
    "public/*",
    "*.json",
    "*.js"
  ],
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "bundle": "vue-cli-service build --target lib ./src/components/index.js",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "lodash.clonedeep": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.isequal": "^4.5.0",
    "lodash.set": "^4.3.2",
    "vue": "^2.6.8",
    "vue-click-outside": "^1.0.7",
    "vue-multiselect": "^2.1.4",
    "vue-popperjs": "^2.0.3",
    "vue-reactive-provide": "^0.3.0"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "@vue/cli-plugin-babel": "^3.4.1",
    "@vue/cli-plugin-eslint": "^3.4.1",
    "@vue/cli-service": "^3.5.1",
    "@vue/eslint-config-prettier": "^4.0.1",
    "autoprefixer": "^9.4.10",
    "babel-eslint": "^10.0.1",
    "dayjs": "^1.8.9",
    "eslint": "^5.15.1",
    "eslint-plugin-vue": "^5.2.2",
    "faker": "^4.1.0",
    "postcss-preset-env": "^6.6.0",
    "pragma-css": "^0.7.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-class-component": "^6.3.2",
    "vue-property-decorator": "^7.3.0",
    "vue-router": "^3.0.2",
    "vue-template-compiler": "^2.6.8"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": "off",
      "quotes": [
        "error",
        "single"
      ],
      "indent": [
        "error",
        2
      ],
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
        "legacyDecorators": true
      }
    },
    "plugins": [
      "vue"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
